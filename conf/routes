# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET		/products					controllers.Product.index()
GET		/products/:productId		controllers.Product.detailsProduct(productId: String)
POST	/products					controllers.Product.addNewProduct()
DELETE	/products/:productId		controllers.Product.deleteProduct(productId: String)

GET		/tags						controllers.Tag.index()
GET		/tags/:tagId				controllers.Tag.detailsTag(tagId: String)
POST	/tags						controllers.Tag.addNewTag()
DELETE	/tags/:tagId				controllers.Tag.deleteTag(tagId: String)

GET		/stockitem					controllers.StockItem.index()
GET		/stockitem/:stockItemId		controllers.StockItem.detailsStockItem(stockItemId: String)
POST	/stockitem					controllers.StockItem.addNewStockItem()
DELETE	/stockitem/:stockItemId		controllers.StockItem.deleteStockItem(stockItemId: String)

GET		/warehouse					controllers.Warehouse.index()
GET		/warehouse/:warehouseId		controllers.Warehouse.detailsWarehouse(warehouseId: String)
POST	/warehouse					controllers.Warehouse.addNewWarehouse()
DELETE	/warehouse/:warehouseId		controllers.Warehouse.deleteWarehouse(warehouseId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
